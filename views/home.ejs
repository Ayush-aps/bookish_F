    }

    .book-month-price {
      font-size: 1.5rem;
      font-weight: 700;
      color: #333;
      margin-bottom: 0.5rem;
    }

    .book-month-strikethrough {
      color: #777;
      text-decoration: line-through;
      font-size: 1.1rem;
      margin-left: 0.5rem;
      font-weight: 400;
    }

    .book-month-discount {
